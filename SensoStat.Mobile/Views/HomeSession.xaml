<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SensoStat.Mobile.Views.HomeSession">
    <StackLayout BackgroundColor="white">
        <Label Text="{Binding Instruction}" HorizontalTextAlignment="Center" TextColor="Black" FontSize="24" Margin="0,24,0,24"/>
        <Label Text="{Binding Product}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Purple" FontAttributes="bold" FontSize="24" Margin="0,24,0,50"/>
        <Label Text="Cliquez ou dites :" HorizontalTextAlignment="Center" TextColor="Black" FontSize="24"/>
        <Button  Text="Etape suivante" TextColor="White" FontSize="24" Command="{Binding NextCommand}" Background="#fd7e14" VerticalOptions="Center" Margin="10" />
    </StackLayout>
</ContentPage>
